<%- include('../partials/header') %>

<div class="blog-container">
  <h1>All Blog Posts</h1>

  <% if (posts.length === 0) { %>
    <div class="no-posts">
      <p>No posts yet. Be the first to create one!</p>
      <% if (user) { %>
        <a href="/blog/create" class="btn btn-primary">Create Post</a>
      <% } %>
    </div>
  <% } else { %>
    <div class="posts-grid">
      <% posts.forEach(post => { %>
        <div class="post-card">
          <% if (post.image) { %>
            <div class="post-image">
              <img src="<%= post.image %>" alt="<%= post.title %>">
            </div>
          <% } %>
          <div class="post-content">
            <h2><a href="/blog/<%= post._id %>"><%= post.title %></a></h2>
            <p class="post-meta">
              By <%= post.author.username %> | <%= new Date(post.createdAt).toLocaleDateString() %>
            </p>
            <p class="post-excerpt"><%= post.content.substring(0, 150) %>...</p>
            <div class="post-actions">
              <a href="/blog/<%= post._id %>" class="btn btn-secondary">Read More</a>
              <% if (user && user.id === post.author._id.toString()) { %>
                <a href="/blog/<%= post._id %>/edit" class="btn btn-edit">Edit</a>
                <form action="/blog/<%= post._id %>/delete" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
